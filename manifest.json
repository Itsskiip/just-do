{
    "manifest_version": 3,
    "name": "Just Do",
    "description": "A minimal note-taking extension",
    "version": "0.0.1",
    "action": {
        "default_title": "Just Do",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "service_worker": "background.js",
        "type": "module",
        "persistent": false
    },
    "permissions": [
      "storage", 
      "contextMenus"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Q"
            }
        }
    }
}